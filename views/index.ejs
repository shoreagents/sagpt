<div class="container-gpt">
  <div class="generator-outer">
    <div class="chatbot details-section">
      <header>
        <h2>Blog Details</h2>
      </header>
      <ul class="details-inner">
        <div class="details-input">
          <div class="row">
            <div class="column">
              <div for="tone" class="hide" id="outputTone"></div>
              <label for="tone" class="firstlabel">Tone/Personality</label>
              <select name="tone" id="tone">
                <option class="selected" value="Select Tone/Personality" disabled selected>Select Tone/Personality
                </option>
                <option value="None">Standard</option>
                <option value="Analytical">Analytical</option>
                <option value="Creative">Creative</option>
                <option value="Inspirational">Inspirational</option>
                <option value="Technical">Technical</option>
                <option value="Persuasive">Persuasive</option>
                <option value="Informal">Informal</option>
                <option value="Formal">Formal</option>
                <option value="Narrative">Narrative</option>
                <option value="Analyzing">Analyzing</option>
                <option value="Homorous">Homorous</option>
                <option value="Reflective">Reflective</option>
                <option value="Educational">Educational</option>
                <option value="Adventurous">Adventurous</option>
                <option value="Nurturing">Nurturing</option>
                <option value="Intellectual">Intellectual</option>
                <option value="Sentimental">Sentimental</option>
              </select>
            </div>
            <div class="column">
              <div for="customerObjective" class="hide" id="outputCustomerObjective"></div>
              <label for="customerObjective">Customer Objectives</label>
              <select name="customerObjective" id="customerObjective">
                <option class="selected" value="Select Customer Objective" disabled selected>Select Customer Objective
                </option>
                <option value="None">None</option>
                <option value="Improve Efficiency">Improve Efficiency</option>
                <option value="Expand Service Hours">Expand Service Hours</option>
                <option value="Enhance Customer Support">Enhance Customer Support</option>
                <option value="Increase Focus on Core Activities">Increase Focus on Core Activities</option>
                <option value="Access Specialized Skills">Access Specialized Skills</option>
                <option value="Scalability">Scalability</option>
                <option value="Cost-Effective Growth">Cost-Effective Growth</option>
                <option value="Faster Turnaround Times">Faster Turnaround Times</option>
                <option value="Focus on Innovation">Focus on Innovation</option>
                <option value="Flexibility in Staffing">Flexibility in Staffing</option>
                <option value="Risk Mitigation">Risk Mitigation</option>
                <option value="Market Expansion">Market Expansion</option>
                <option value="Focus on Sales and Growth">Focus on Sales and Growth</option>
                <option value="Work-Life Balance">Work-Life Balance</option>
              </select>
            </div>
          </div>
          <div class="row">
            <div class="column">
              <div for="author" class="hide" id="outputAuthor"></div>
              <label for="author">Author</label>
              <select name="author" id="author">
                <option class="selected" value="Select Author" disabled selected>Select Author</option>
                <option value="None">None</option>
                <option value="Stephen Atcheler">Stephen Atcheler</option>
                <option value="Kevin Macabanti">Kevin Macabanti</option>
              </select>
            </div>
            <div class="column">
              <div for="target" class="hide" id="outputTarget"></div>
              <label for="target">Target Market</label>
              <select name="target" id="target">
                <option class="selected" value="Select Target Market" disabled selected>Select Target Market</option>
                <option value="None">None</option>
                <option value="Property Management">Property Management</option>
                <option value="Real Estate Sales">Real Estate Sales</option>
                <option value="Property Development">Property Development</option>
                <option value="Construction Companies">Construction Companies</option>
                <option value="Home Builders">Home Builders</option>
                <option value="Conveyancing Companies">Conveyancing Companies</option>
                <option value="Mortgage Companies">Mortgage Companies</option>
                <option value="Real Estate Companies in the United States">Real Estate Companies in the United States
                </option>
              </select>
            </div>
          </div>
          <div class="row">
            <div class="column">
              <div for="perspective" class="hide" id="outputPerspective"></div>
              <label for="perspective">Perspective</label>
              <select name="perspective" id="perspective">
                <option class="selected" value="Select Perspective" disabled selected>Select Perspective</option>
                <option value="Stephen Atcheler">Stephen Atcheler</option>
                <option value="Kevin Macabanti">Kevin Macabanti</option>
              </select>
            </div>
            <div class="column">
              <div class="button-container">
                <button onclick="document.getElementById('modal').style.display='flex'" class="editdata">Edit Database
                  Document</button>
              </div>
            </div>
          </div>
        </div>
      </ul>
    </div>
    <div class="chatbot assistant-section">
      <header>
        <h2>Blog Assistant</h2>
      </header>
      <div class="chatbot generator assistant">
        <ul class="chatbox">
          <li class="chat incoming">
            <span class="material-symbols-outlined">smart_toy</span>
            <p>Hey there! How can i help you?</p>
          </li>
        </ul>
        <div class="chat-input">
          <textarea placeholder="Enter target keyword here..." required></textarea>
          <span id="send-btn" class="material-symbols-rounded">send</span>
        </div>
      </div>
    </div>
  </div>
  <div class="user-outer">
    <div class="chatbot user-section">
      <header>
        <h2>Blog Builder</h2>
      </header>
      <ul class="chatbox user-textarea">
        <div class="user-input">
          <form action="" method="post">
            <textarea name="textarea" id="default"></textarea>
          </form>
        </div>
      </ul>
    </div>
  </div>
</div>

<div class="modal" id="modal">
  <article class="modal-container">
    <header class="modal-container-header">
      <h1 class="modal-container-title">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" aria-hidden="true">
          <path fill="none" d="M0 0h24v24H0z" />
          <path fill="currentColor"
            d="M14 9V4H5v16h6.056c.328.417.724.785 1.18 1.085l1.39.915H3.993A.993.993 0 0 1 3 21.008V2.992C3 2.455 3.449 2 4.002 2h10.995L21 8v1h-7zm-2 2h9v5.949c0 .99-.501 1.916-1.336 2.465L16.5 21.498l-3.164-2.084A2.953 2.953 0 0 1 12 16.95V11zm2 5.949c0 .316.162.614.436.795l2.064 1.36 2.064-1.36a.954.954 0 0 0 .436-.795V13h-5v3.949z" />
        </svg>
        ShoreAgents Database Content
      </h1>
      <button class="icon-button" onclick="document.getElementById('modal').style.display='none'">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
          <path fill="none" d="M0 0h24v24H0z" />
          <path fill="currentColor"
            d="M12 10.586l4.95-4.95 1.414 1.414-4.95 4.95 4.95 4.95-1.414 1.414-4.95-4.95-4.95 4.95-1.414-1.414 4.95-4.95-4.95-4.95L7.05 5.636z" />
        </svg>
      </button>
    </header>
    <form class="dataupdate" action="/updatedata" method="POST">
      <section class="modal-container-body rtf">
        <textarea type="textarea" name="database" id="database" cols="50" rows="20"><%- data %></textarea>
      </section>
      <footer class="modal-container-footer">
        <input type="submit" class="button is-primary" value="Update">
      </footer>
    </form>
  </article>
</div>